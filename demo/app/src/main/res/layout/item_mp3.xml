<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:orientation="vertical"
			  android:padding="8dp">
	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
 android:orientation="horizontal">
		<androidx.cardview.widget.CardView android:layout_margin="5dp" android:layout_width="50dp" android:layout_height="50dp"
										   app:cardCornerRadius="50dp">
			<ImageView android:layout_width="match_parent"
					   android:background="@drawable/ic_launcher_background"
					   android:layout_height="match_parent">
			</ImageView>

		</androidx.cardview.widget.CardView>


		<LinearLayout android:layout_margin="5dp" android:layout_width="match_parent" android:orientation="vertical" android:layout_height="wrap_content">
			<TextView
					android:id="@+id/tvFileName"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="16sp"
					android:text="Bài hát"
					android:textColor="@android:color/black" />

			<TextView
					android:id="@+id/tvSinger"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="16sp"
					android:text="Ca sĩ"
					android:textColor="@android:color/black" />
		</LinearLayout>

	</LinearLayout>

</LinearLayout>
